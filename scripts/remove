#!/bin/bash

#=================================================
# IMPORT GENERIC HELPERS
#=================================================

source _common.sh
source /usr/share/yunohost/helpers

#=================================================
# REMOVE SERVICE FROM ADMIN PANEL
#=================================================


#=================================================
# REMOVE ONLYOFFICE
#=================================================
ynh_script_progression --message="Removing OnlyOffice..."

ynh_secure_remove --file=/var/lib/dpkg/info/onlyoffice-documentserver.prerm


#=================================================
# REMOVE SYSTEM CONFIGURATIONS
#=================================================
ynh_script_progression --message="Removing system configurations related to $app..." --weight=1

ynh_config_remove_logrotate

for service in "converter" "docservice" "metrics"; do
    if ynh_hide_warnings yunohost service status "$app-$service" >/dev/null
    then
        yunohost service remove "$app-$service"
    fi
    ynh_config_remove_systemd "$app-$service"
done

ynh_remove_nginx_config

ynh_safe_rm "/etc/cron.d/$app"

#=================================================
# REMOVE VARIOUS FILES
#=================================================

# Remove a directory securely
ynh_secure_remove --file="/etc/onlyoffice"
ynh_safe_rm --file="$install_dir"

#=================================================
# END OF SCRIPT
#=================================================

ynh_script_progression --message="Removal of $app completed"
